<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullscreen_start_rx_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/start_rx_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullscreen_stop_rx_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/stop_rx_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullscreen_start_handler_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/start_handler_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullscreen_stop_handler_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/stop_handler_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullscreen_start_foreground_wrong_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/start_foreground_wrong_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullscreen_stop_foreground_wrong_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/stop_foreground_wrong_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fullscreen_start_foreground_correct_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/start_foreground_correct_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fullscreen_stop_foreground_correct_service_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?selectableItemBackground"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:padding="10dp"
            android:text="@string/stop_foreground_correct_service_button"
            android:textAllCaps="true"
            android:textColor="@color/colorGreenDark"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>